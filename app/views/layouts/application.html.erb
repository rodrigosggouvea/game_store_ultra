<!DOCTYPE html>
<html>
<head>
  <title>GameStoreUltra</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render "menu" %>
<div class="container">
	<br/>
	<br/>
	<br/>
	<% if params[:controller] == "application" and params[:action] == "index" %>
	<%= yield %>
	<% else %>
	<div class="row">
		<div class="span3">
			<%= render "side_menu" %>
		</div>
		<div class="span9">
			<%= yield %>
		</div>
	</div>
	<% end %>
	<%= render "footer" %>
</div>
</body>
</html>
