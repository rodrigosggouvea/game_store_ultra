<h1>Pesquisar</h1>
<%= form_for @offers, :url => search_offers_path, :html => {:method => :get} do |f| %>
  <%= f.label :title_or_text_contains %>
  <%= f.text_field :title_or_text_contains %><br />
  <%= f.submit "Pesquisar", :class => "btn-primary btn-large" %>
<% end %>
<hr\>
<% if @offers %>
	<table class = "table">
		<% @offers.each do |offer| %>
			<%= link_to offer do %>
				<%= image_tag ofer.offer_images.first.image.url(:thumb) %>	
				<%= offer.title %>
				<%= offer.price %>
			<% end %>
			<hr\>
		<% end %>
	</table>
<% end %>